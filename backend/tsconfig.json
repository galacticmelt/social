{
  "compilerOptions": {
    "target": "es5",                                 
    "module": "es6",
    "moduleResolution": "node",                               
    "esModuleInterop": true,                                                 
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true,
    "outDir": "./dist"                        
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "env.d.ts"],
  "exclude": ["node_modules", ".vscode"],    
}
